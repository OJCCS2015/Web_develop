@using VoteSystem.Models
@model RegisterModel
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
@{Html.BeginForm("Register", "Account", FormMethod.Post);}
    @Html.LabelFor(m => m.userNick, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.userNick, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.userNick, "", new { @class = "text-danger" })
    </div>

    @Html.LabelFor(m => m.userEmail, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.userEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.userEmail, "", new { @class = "text-danger" })
    </div>

    @Html.LabelFor(m => m.userPsw, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.PasswordFor(m => m.userPsw, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.userPsw, "", new { @class = "text-danger" })
    </div>

    @Html.LabelFor(m => m.userPswRe, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.PasswordFor(m => m.userPswRe, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.userPswRe, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="注册" class="btn btn-default" />
        </div>
    </div>
@{Html.EndForm();}
@ViewBag.res


